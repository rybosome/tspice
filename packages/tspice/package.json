{
  "name": "@rybosome/tspice",
  "version": "0.0.4",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:dist-publish": "node ./scripts/build-dist-publish.mjs",
    "verify:dist-publish": "node ./scripts/verify-dist-publish.mjs",
    "prepack": "pnpm -w build",
    "release": "pnpm -w build && pnpm -C packages/tspice run verify:dist-publish && pnpm dlx np --contents dist-publish",
    "typecheck": "tsc -p tsconfig.json --emitDeclarationOnly && tsc -p tsconfig.test.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@rybosome/tspice-backend-contract": "workspace:*",
    "@rybosome/tspice-backend-fake": "workspace:*",
    "@rybosome/tspice-backend-wasm": "workspace:*",
    "@rybosome/tspice-core": "workspace:*"
  },
  "optionalDependencies": {
    "@rybosome/tspice-native-darwin-arm64": "workspace:*",
    "@rybosome/tspice-native-darwin-x64": "workspace:*",
    "@rybosome/tspice-native-linux-x64-gnu": "workspace:*"
  },
  "peerDependencies": {
    "@rybosome/tspice-backend-node": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@rybosome/tspice-backend-node": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@rybosome/tspice-backend-node": "workspace:*",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
