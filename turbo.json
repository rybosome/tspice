{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["TSPICE_CSPICE_DIR", "TSPICE_CSPICE_MANIFEST"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist-publish/**", "native/build/Release/*.node"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map", "dist/.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
